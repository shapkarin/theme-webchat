{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@src/*": [
        "./client/*"
      ],
      "*": [
        "*"
      ]
    },
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": false
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "public",
    "vendor"
  ],
  "compileOnSave": false
}